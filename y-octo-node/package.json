{
  "name": "@y-octo/node",
  "private": true,
  "main": "yocto.js",
  "types": "yocto.d.ts",
  "napi": {
    "name": "y-octo",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-pc-windows-msvc",
        "aarch64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-musl"
      ]
    },
    "ts": {
      "constEnum": false
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@napi-rs/cli": "^2.16.2",
    "@types/node": "^20.16.4",
    "@types/prompts": "^2.4.4",
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "prompts": "^2.4.2",
    "tsx": "^4.16.2",
    "typescript": "^5.1.6",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.18"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --no-const-enum",
    "build:debug": "napi build --platform --no-const-enum",
    "universal": "napi universal",
    "test": "ava --concurrency 1 --serial",
    "test:watch": "yarn exec tsx ./scripts/run-test.mts all --watch",
    "test:coverage": "NODE_OPTIONS=\"--import tsx\" c8 node ./scripts/run-test.mts all",
    "version": "napi version"
  },
  "version": "0.0.1",
  "sharedConfig": {
    "nodeArgs": [
      "--import",
      "tsx",
      "--es-module-specifier-resolution=node"
    ],
    "env": {
      "TS_NODE_TRANSPILE_ONLY": "1",
      "TS_NODE_PROJECT": "./tsconfig.json",
      "NODE_ENV": "development",
      "DEBUG": "napi:*"
    }
  },
  "ava": {
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "workerThreads": false,
    "nodeArguments": [
      "--trace-sigint",
      "--import",
      "tsx",
      "--es-module-specifier-resolution=node"
    ],
    "files": [
      "tests/**/*.spec.ts"
    ],
    "environmentVariables": {
      "TS_NODE_PROJECT": "./tests/tsconfig.json",
      "NODE_ENV": "test"
    }
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ],
    "report-dir": ".coverage",
    "exclude": [
      "scripts",
      "node_modules",
      "**/*.spec.ts"
    ]
  }
}
